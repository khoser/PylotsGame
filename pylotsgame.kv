#:kivy 1.9.0

<PG>:
    pos: self.pos


<GameDesk>:
    pg: p_g

    Button:
        font_size: 24
        center_x: root.center_x + 55
        top: root.top - 5
        text: "New"
        height: 45
        on_press: root.onbuttonpress()

    TextInput:
        id: txtinp
        font_size: 20
        center_x: root.center_x - 55
        top: root.top - 5
        text: "4"
        height: 45

    Label:
        id: lbl
        font_size: 48
        center_x: root.center_x
        top: root.top - 25
        text: str(root.pg.count)

    PG:
        id: p_g

